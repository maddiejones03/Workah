<%- include('partials/header') %>

    <div class="container">
        <div class="card"
            style="max-width: 600px; margin: 40px auto; padding: 32px; border: 1px solid rgba(255,255,255,0.1);">
            <div style="text-align: center; margin-bottom: 32px;">
                <h2 style="font-size: 28px; margin-bottom: 8px; color: #111;">Apply for <%= job.jobtitle %>
                </h2>
                <p style="color: #666; font-size: 16px;">at <%= job.companyname %>
                </p>
            </div>

            <form action="/jobs/<%= job.jobid %>/apply" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                    <label class="label" for="name">Full Name</label>
                    <input class="input" type="text" id="name" name="name" required placeholder="e.g. Alex Smith">
                </div>

                <div class="form-row">
                    <label class="label" for="dob">Date of Birth</label>
                    <input class="input" type="date" id="dob" name="dob" required>
                </div>

                <div class="form-row">
                    <label class="label" for="skills">Skills</label>
                    <textarea class="input" id="skills" name="skills" rows="4"
                        placeholder="List your relevant skills..."
                        style="height: auto; min-height: 100px; font-family: inherit;"></textarea>
                </div>

                <div class="form-row">
                    <label class="label" for="experience">Prior Experience</label>
                    <textarea class="input" id="experience" name="experience" rows="4"
                        placeholder="Tell us about any previous work..."
                        style="height: auto; min-height: 100px; font-family: inherit;"></textarea>
                </div>

                <div class="form-row">
                    <label class="label" for="resume">Resume (Optional)</label>
                    <input class="input" type="file" id="resume" name="resume" style="padding: 12px; height: auto;">
                </div>

                <button type="submit" class="btn primary btn-block" style="margin-top: 12px;">Submit
                    Application</button>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>