<%- include('partials/header') %>

    <div class="container">
        <div class="card"
            style="max-width: 800px; margin: 40px auto; padding: 32px; border: 1px solid rgba(255,255,255,0.1);">
            <div style="text-align: center; margin-bottom: 32px;">
                <h2 style="font-size: 28px; margin-bottom: 8px; color: #111;">
                    <%= job ? 'Edit Job' : 'Post a New Job' %>
                </h2>
                <p style="color: #666; font-size: 16px;">
                    <%= job ? 'Update your job listing details below.' : 'Create a new opportunity for local teens.' %>
                </p>
            </div>

            <form action="<%= action %>" method="post">
                <div class="form-row">
                    <label class="label" for="title">Job Title</label>
                    <input class="input" type="text" id="title" name="title" value="<%= job ? job.title : '' %>"
                        required placeholder="e.g. Weekend Cashier" />
                </div>

                <div class="form-row">
                    <label class="label" for="description">Description</label>
                    <textarea class="input" id="description" name="description" rows="4" required
                        placeholder="Describe the role, responsibilities, and perks..."
                        style="min-height: 120px; font-family: inherit;"><%= job ? job.description : '' %></textarea>
                </div>

                <div class="row" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
                    <div class="field">
                        <label class="label" for="location">Location</label>
                        <input class="input" type="text" id="location" name="location"
                            value="<%= job ? job.location : '' %>" required placeholder="e.g. Provo, UT" />
                    </div>
                    <div class="field">
                        <label class="label" for="pay">Hourly Pay</label>
                        <input class="input" type="number" step="0.01" id="pay" name="pay"
                            value="<%= job ? job.pay : '' %>" placeholder="15.00" required />
                    </div>
                    <div class="field">
                        <label class="label" for="hours">Hours/Week</label>
                        <input class="input" type="number" id="hours" name="hours" value="<%= job ? job.hours : '' %>"
                            placeholder="20" required />
                    </div>
                </div>

                <div class="actions-grid" style="margin-top: 32px;">
                    <button class="btn btn-gradient btn-block" type="submit">
                        <%= job ? 'Update Job' : 'Post Job' %>
                    </button>
                    <a class="btn btn-outline-dark btn-block" href="/dashboard">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>