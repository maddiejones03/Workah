<%- include('partials/header') %>

    <div class="container">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
            <h1 style="color:white;">Dashboard</h1>
            <% if (isManager) { %>
                <a href="/jobs/add" class="btn primary">Post New Job</a>
                <% } %>
        </div>

        <% if (isManager) { %>
            <h2 style="color:white;">My Company's Jobs</h2>
            <% if (jobs.length> 0) { %>
                <div class="grid">
                    <% jobs.forEach(job=> { %>
                        <div class="card">

                            <h3 style="margin:0 0 8px">
                                <%= job.jobtitle %>
                            </h3>
                            <p class="muted">
                                <%= job.jobdescription %>
                            </p>
                            <div style="margin-top:15px; display:flex; gap:10px;">
                                <a href="/jobs/edit/<%= job.jobid %>" class="btn"
                                    style="color:black; background:#eee;">Edit</a>
                                <form action="/jobs/delete/<%= job.jobid %>" method="POST"
                                    onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn"
                                        style="background:var(--danger); border:none;">Delete</button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <div class="card" style="text-align:center;">
                        <p class="muted">You haven't posted any jobs yet.</p>
                        <a href="/jobs/add" class="btn primary">Post your first job</a>
                    </div>
                    <% } %>
                        <% } else { %>
                            <div class="card">
                                <h2>Welcome to Workah!</h2>
                                <p>Use the search page to find jobs near you.</p>
                                <a href="/" class="btn primary">Search Jobs</a>
                            </div>
                            <% } %>
    </div>

    <%- include('partials/footer') %>